    "jquery": "^3.3.1",
    "jsdom": "13.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "prettier": "^1.15.3",
    "webpack": "^4.27.0",
    "webpack-cli": "^3.1.2"
  }
